<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:id="@+id/lineaLayout"
    tools:context=".MainActivity"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Первые данные"
        android:id="@+id/button"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вторые данные"
        android:id="@+id/button2"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 данные"
        android:id="@+id/button3"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4 данные"
        android:id="@+id/button4"
        android:layout_weight="1" />

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5 данные"
        android:id="@+id/button5"
        android:layout_weight="1" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Первые данные"
            android:id="@+id/button6"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вторые данные"
            android:id="@+id/button7"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 данные"
            android:id="@+id/button8"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 данные"
            android:id="@+id/button9"
            android:layout_weight="1" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 данные"
            android:id="@+id/button10"
            android:layout_weight="1" />
    </LinearLayout>
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.lardis.ivan.testcustomview.MyView
        android:id="@+id/myview"
      android:layout_height="match_parent"
        android:layout_width="match_parent"

        />
        <com.lardis.ivan.testcustomview.MyZoomView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myzoomview"
            />

    </AbsoluteLayout>




</LinearLayout>
