<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/layout_info_width"
    android:layout_height="@dimen/layout_info_height">

    <LinearLayout

        android:layout_width="@dimen/layout_info_width"
        android:layout_height="@dimen/layout_info_height"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/layout_info_padding"
        android:paddingBottom="@dimen/layout_info_padding"
        android:paddingLeft="@dimen/layout_info_padding"
        android:paddingRight="@dimen/layout_info_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/layout_info_padding_raz"
            android:layout_marginTop="@dimen/layout_info_padding_raz"
            android:text="РАЗМИНКА"
            android:textColor="@color/razminka"
            android:textSize="@dimen/layout_info_text_size"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Длительность:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/layout_info_text_size" />

            <TextView
                android:id="@+id/infodlit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="00:12"

                android:textColor="@android:color/black"
                android:textSize="@dimen/layout_info_text_size"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кол-во подходов:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/layout_info_text_size" />

            <TextView
                android:id="@+id/infoPodxod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="20"
                android:textColor="@android:color/black"
                android:textSize="@dimen/layout_info_text_size"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кол-во раз:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/layout_info_text_size" />

            <TextView
                android:id="@+id/infoRaz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="00:12"

                android:textColor="@android:color/black"
                android:textSize="@dimen/layout_info_text_size"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сожжено:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/layout_info_text_size" />

            <TextView
                android:id="@+id/infoSozheno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="10калл"
                android:textColor="@android:color/black"
                android:textSize="@dimen/layout_info_text_size"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пульс:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/layout_info_text_size" />

            <TextView
                android:id="@+id/infoPuls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="102 уд/мин"
                android:textColor="@android:color/black"
                android:textSize="@dimen/layout_info_text_size"
                android:textStyle="bold" />

        </FrameLayout>

    </LinearLayout>
</RelativeLayout>